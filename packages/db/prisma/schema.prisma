generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @default(dbgenerated("concat('usr_', replace(cast(gen_random_uuid() as text), '-', ''))")) @db.Text
  email    String     @unique()
  name     String?
  password String
  games    UserGame[]
}

model Game {
  id    String     @id @default(dbgenerated("concat('gam_', replace(cast(gen_random_uuid() as text), '-', ''))")) @db.Text
  users UserGame[]
}

model UserGame {
  id     String @id @default(dbgenerated("concat('usg_', replace(cast(gen_random_uuid() as text), '-', ''))")) @db.Text
  user   User   @relation(fields: [userId], references: [id])
  userId String
  game   Game   @relation(fields: [gameId], references: [id])
  gameId String
}
